{
	"name": "@weareinreach/action-md2adf",
	"version": "1.0.0",
	"description": "GitHub action to convert GitHub issue body markdown to Atlassian Document Format",
	"main": "dist/index.js",
	"scripts": {
		"build": "ncc build src/index.ts --license licenses.txt -m -e @atlaskit/analytics-listeners -e @atlaskit/button -e @atlaskit/media-picker -e @atlaskit/code -e @atlaskit/emoji -e @atlaskit/media-card -e @atlaskit/media-picker -e @atlaskit/mention -e @atlaskit/profilecard -e @atlaskit/smart-card -e @atlaskit/smart-user-picker -e @atlaskit/task-decision -e cypress-file-upload",
		"license": "generate-license-file --input package.json --output licenses.txt --overwrite",
		"dist": "pnpm license && pnpm build"
	},
	"keywords": [
		"GitHub Action",
		"Jira",
		"adf"
	],
	"author": "@JoeKarow",
	"license": "ISC",
	"dependencies": {
		"@actions/core": "^1.10.0",
		"@actions/github": "^5.1.1",
		"@atlaskit/editor-markdown-transformer": "^4.2.16",
		"md-to-adf": "^0.6.4"
	},
	"devDependencies": {
		"@octokit/webhooks-definitions": "^3.67.3",
		"@vercel/ncc": "^0.34.0",
		"eslint": "^8.19.0",
		"generate-license-file": "^2.0.0",
		"typescript": "^4.8.4"
	}
}
